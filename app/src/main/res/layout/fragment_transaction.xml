<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#D3D3D3">


    <android.support.v7.widget.CardView
        android:id="@+id/content_main_card"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">


            <TextView
                android:id="@+id/fragment_transaction_card_overview"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="24dp"
                android:text="Overview"
                android:textSize="24sp"
                android:layout_marginTop="16dp"
                android:textStyle="bold" />

            <RelativeLayout

                android:id="@+id/fragment_transaction_card_inflow"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/fragment_transaction_card_overview"
                android:layout_marginTop="20dp">

                <TextView

                    android:id="@+id/fragment_transaction_card_inflowtext"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:text="Inflow"
                    android:textSize="16sp" />

                <TextView
                    android:id="@+id/fragment_transaction_card_inflowvalue"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="10dp"
                    android:text="0"
                    android:textSize="16sp" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/fragment_transaction_card_outflow"

                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/fragment_transaction_card_inflow"
                android:layout_marginTop="10dp">

                <TextView
                    android:id="@+id/fragment_transaction_card_outflowtext"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:text="Outflow"
                    android:textSize="16sp" />

                <TextView
                    android:id="@+id/fragment_transaction_card_outflowvalue"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="10dp"
                    android:text="0"
                    android:textSize="16sp" />
            </RelativeLayout>
        </RelativeLayout>
    </android.support.v7.widget.CardView>

    <ListView
        android:id="@+id/fragment_transaction_list"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/content_main_card"
        android:layout_marginTop="16dp">

    </ListView>



</RelativeLayout>
