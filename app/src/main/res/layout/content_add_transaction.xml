<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.plumbum.aapu.household.AddTransactionActivity"
    tools:showIn="@layout/activity_add_transaction">

    <EditText
        android:id="@+id/content_add_transaction_edit_amount"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:layout_marginTop="36dp"
        android:hint="Amount"
        android:textSize="24sp" />

    <ImageView
        android:id="@+id/content_add_transaction_category_icon"
        android:layout_marginTop="16dp"
        android:layout_below="@id/content_add_transaction_edit_amount"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:onClick="picker"/>


    <TextView
        android:id="@+id/content_add_transaction_category_name"
        android:layout_below="@id/content_add_transaction_edit_amount"
        android:layout_toRightOf="@id/content_add_transaction_category_icon"
        android:layout_marginLeft="16dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="23dp"
        android:clickable="true"
        android:text="Category"
        android:textSize="28sp"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/content_add_transaction_remarks"
        android:layout_below="@id/content_add_transaction_category_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:hint="Remarks"
        android:textSize="24sp" />

    



</RelativeLayout>
