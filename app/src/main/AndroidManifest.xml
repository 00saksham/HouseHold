<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.plumbum.aapu.household">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".MainActivity"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".IntroActivity"
            android:theme="@style/AppTheme.NoActionBar"></activity>
        <activity
            android:name=".AddTransactionActivity"
            android:label="@string/title_activity_add_transaction"
            android:theme="@style/AppTheme.NoActionBar">

        </activity>
        <activity
            android:name=".AddCategoryActivity"
            android:label="@string/title_activity_add_category"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".CategoryButtonActivity"
            android:label="@string/title_activity_category_button"
            android:theme="@style/AppTheme.NoActionBar"></activity>
        <activity
            android:name=".CategoriesActivity"
            android:label="@string/title_activity_categories"
            android:theme="@style/AppTheme.NoActionBar"></activity>
        <activity
            android:name=".DebtsLoanActivity"
            android:label="@string/title_activity_debts_loan"
            android:theme="@style/AppTheme.NoActionBar"></activity>
    </application>

</manifest>